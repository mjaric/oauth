<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @order.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @order.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @order.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @order.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @order.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number2) %>:</strong></dt>
  <dd><%= @order.phone_number2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_address) %>:</strong></dt>
  <dd><%= @order.delivery_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_city) %>:</strong></dt>
  <dd><%= @order.delivery_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_zip_code) %>:</strong></dt>
  <dd><%= @order.delivery_zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @order.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @order.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @order.position %></dd>
</dl>

<% @order.line_items.each do |item| %>
<p><%= item.product.title %> | <%= item.unit_price %> | <%= item.quantity %> | <%= item.total_price %></p>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
