<div class="thumbnail <%= current_cart.count_product(product.id) != '' ? 'in-cart' : '' %>">
    <%= product_image_tag(product) %>
    <% @count = current_cart.count_product(product.id) %>
    <% if @count != '' %>
    <i class="icon-shopping-cart icon-top-info">
      <span class="badge badge-warning" data-placement="right" rel="tooltip" title="Proizvod je dodat u vasu korpu"><%= @count %></span>
    </i>
    <% end %>
    <div class="caption">
      <h3><%= link_to h(product.title), product %></h3>
      <p><%= product.description %></p>
      <h2><%= format_price(product.price) %></h2>
      <p><%= link_to raw('<i class="icon-shopping-cart"></i> Dodaj u korpu'), line_items_path(product_id: product), :method => :post, remote: true, :class => 'btn btn-primary' %></p>
    </div>
</div>