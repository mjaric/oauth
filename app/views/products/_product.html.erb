<div class="thumbnail product <%= current_cart.count_product(product.id) != '' ? 'in-cart' : '' %>">
    <a href="<%= product_path(product) %>">
        <%= product_image_tag(product) %>
    </a>
    <% @count = current_cart.count_product(product.id) %>
    <% if @count != '' %>
    <i class="icon-shopping-cart icon-top-info">
      <span class="badge badge-warning" data-placement="right" rel="tooltip" title="Proizvod je dodat u vasu korpu"><%= @count %></span>
    </i>
    <% end %>
    <div class="caption">
      <h3 class="title">
        <a href="<%= product_path(product) %>"><%= shorty(product.title, 70) %></a>
      </h3>
      <hr/>
      <p><% product.description %></p>
      <h2 class="price"><%= format_price(product.price) %></h2>
      <hr/>
      <div class="row-fluid buttons">
      <% if @count != '' %>
      <p><%= link_to raw('<i class="icon-shopping-cart"></i> Dodaj jos u korpu'), line_items_path(product_id: product), :method => :post, remote: true, :class => 'btn btn-large btn-block btn-warning' %></p>
      <% else %>
      <p><%= link_to raw('<i class="icon-shopping-cart"></i> Dodaj u korpu'), line_items_path(product_id: product), :method => :post, remote: true, :class => 'btn btn-large btn-block btn-primary' %></p>
      <% end %>
      <p><%= link_to 'Opis proizvoda', product_path(product), :class => 'btn btn-large btn-block btn-info' %></p>
      </div>
    </div>
</div>