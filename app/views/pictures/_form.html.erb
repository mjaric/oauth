<%= simple_form_for(@picture, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :product_id %>
  <div class="form-inputs">
    <%= f.input :name%>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>