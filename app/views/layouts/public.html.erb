    <div id="wrap">

        <div id="master-head">

            <div class="container">
              <a href="<%= root_path %>"><h2 class="logo"><%= t(:site_name)%></h2></a>
            </div>

            <div class="navbar navbar-inverse navbar-static-top">
              <div class="navbar-inner">
                <div class="container">
                  <ul class="nav">
                    <li class="navbar-brand-logo">
                      <a href=""><h4 class="logo no-margin"><%= t(:site_name)%></h4></a>
                    </li>
                    <%= nav_link t(:home), root_path %>
                    <%= nav_link t(:products), products_path %>
                  </ul>
                  <ul class="nav pull-right">
                    <li>
                      <%= form_tag products_search_path, :class => 'form-search', method: :post  do %>
                          <div class="input-append">
                              <%= text_field_tag :search, params[:search], { :class => 'span2 search-query',  }  %>
                              <button type="submit" class="btn btn-inverse"><%=t(:search)%></button>
                          </div>
                      <% end %>
                    </li>
                    <li class="dropdown">
                      <a href="#" id="my-cart-link" class="dropdown-toggle" data-toggle="dropdown">
                        <%= render 'carts/my_cart_info' %>
                      </a>
                      <ul class="dropdown-menu">
                        <li>
                          <!-- <a class="close" href="#">&times;</a> -->
                          <div id="cart" class="cart">
                            <%= render 'carts/cart' %>
                          </div>
                        </li>
                      </ul>
                    </li>
                    <% if user_signed_in? %>
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Signed in as <%= current_user.name %>
                            <b class="caret"></b></a>
                          <ul class="dropdown-menu">
                            <li><%= link_to "Edit Profile", edit_admin_user_path(current_user) %></li>
                            <li><%= link_to "Authentication", authentications_path %></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><%= link_to "Sing out", destroy_user_session_path %></li>
                          </ul>
                        </li>
                    <% else %>
                        <li>
                          <%= link_to "Sign in", new_user_session_path %>
                        </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
