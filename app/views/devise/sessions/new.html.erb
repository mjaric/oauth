<div class="hero-unit">
  <div class="row-fluid">
    <div class="span6">
      <h2><%= t(:sign_in) %></h2>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>

          <div class="control-group">
            <%= f.label :email, class: 'control-label' %>
            <div class="controls">
              <%= f.email_field :email, :autofocus => true %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password, class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :password %>
            </div>
          </div>

          <div class="control-group">
            <% if devise_mapping.rememberable? -%>
                <div class="controls">
                  <label class="checkbox">
                    <%= f.check_box :remember_me, class: 'checkbox' %> Remember me
                  </label>
            <% end -%>
            <%= f.button "Sign in", type: 'submit', class: 'btn btn-large btn-primary' %>
            </div>
          </div>
      <% end %>
    </div>
    <div class="span6">
      <h2>Ulogujte se preko naloga</h2>
      <button class="btn btn-large btn-primary" type="button">Twitter</button>
      <button class="btn btn-large btn-primary" type="button">Google</button>
      <button class="btn btn-large btn-primary" type="button">Facebook</button>
    </div>
  </div>


  <%= render "devise/shared/links" %>

</div>

