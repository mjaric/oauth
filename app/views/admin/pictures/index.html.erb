<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Action</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%=	 picture.name %></td>
    <td><%=	 picture.image %></td>
    <td><%= link_to 'Show', admin_picture_path(picture) %>
      <%= link_to 'Edit', edit_admin_picture_path(picture) %>
      <%= link_to 'Destroy', admin_pictures_path(picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Picture', new_admin_picture_path %>
