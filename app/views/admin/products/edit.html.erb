<%- model_class = Product -%>

<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human, :default => "Edit #{model_class.model_name.human}") %></h1>
</div>

<div class="bs-docs-example">
  <ul id="edit-product" class="nav nav-tabs">
    <li class="active">
      <a href="#product-detail" data-toggle="tab">Product Detail</a>
    </li>
    <li class="">
      <%= link_to 'Product Images', admin_pictures_path(:product_id => @product.id),  :data => { :target => '#product-images', :toggle => 'tabajax'} %>
    </li>
  </ul>
  <div id="edit-product-content" class="tab-content">
    <div class="tab-pane fade active in" id="product-detail">
        <%= render :partial => 'form' %>
    </div>
    <div class="tab-pane fade" id="product-images">
