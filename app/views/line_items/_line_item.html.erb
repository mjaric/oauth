<tr>
  <td><%= line_item.product.title %></td>
  <td><%= format_price(line_item.product.price) %></td>
  <td>
    <div class="btn-group">
      <%= link_to raw('<i class="icon-minus"></i>'), line_items_path(product_id: line_item.product, remove: true), :action => :remove, :method => :post, remote: true, :class => 'btn btn-small btn-primary' %>
      <button type="button" class="btn btn-small btn-primary active"><strong><%= line_item.quantity %></strong></button>
      <%= link_to raw('<i class="icon-plus"></i>'), line_items_path(product_id: line_item.product), :method => :post, remote: true, :class => 'btn btn-small btn-primary' %>
      <%= link_to raw('<i class="icon-trash"></i>') , line_item, :method => :delete, remote: true, class: 'btn btn-small btn-info' %>
    </div>
  </td>
  <td class="item_price" style="text-align: right"><strong><%= format_price(line_item.total_price) %></strong></td>
</tr>
